@model DeveloperDOtnetStoreProject.Models.Product.AddOn.TechnicalDetails.CategoryItemModel

@{
    ViewBag.Title = "Create";
}

<h2>Create - Category Item Model</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.Label("Teknisk UnderCategori", new { @class = "control-label" } )
            @Html.TextBoxFor(citem => citem.HeaderName, new { @class = "form-control" } )
        </div>
        <div class="form-group">
            @Html.Label("Teknisk Specifikation", new { @class = "control-label" } )
            @Html.TextAreaFor(citem => citem.ItemName, new { @class = "form-control" } )
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.CategoryModelId, "CategoryModelId", new { @class = "control-label" } )
            @Html.DropDownList("CategoryModelId", null, htmlAttributes: new { @class = "form-control" } )
            
        </div>
        <!-- Here i want the dropdown to diktate the number of items added to the List of item -->
        <!--<input type="button" value="OK" class="btn btn-primary" onclick="addTextBox()" />
        <div class="form-group" id="itemAddedToList">
            
        </div>-->
        <div class="form-group">
            @Html.Label("Værdier", new { @class = "control-label" } )
        </div>
        <input type="submit" class="btn btn-primary" value="Opret" />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}